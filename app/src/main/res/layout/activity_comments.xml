<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HomeActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:weightSum="1000">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/threadTitle"
                android:textSize="28dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="998"/>
            <CheckBox
                android:id="@+id/bLike"
                android:onClick="onCheckboxClicked"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"
                android:text="Likes("/>
            <TextView
                android:id="@+id/numLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"
                android:text=")   "/>

            <CheckBox
                android:id="@+id/bDisLike"
                android:onClick="onCheckboxClicked"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"
                android:text="Dislikes("/>
            <TextView
                android:id="@+id/numDislikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:gravity="center"
                android:text=")   "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/createComment"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add New Comment"
                android:clickable="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="24dp"/>

        </LinearLayout>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="@android:color/darker_gray" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout android:id="@+id/table"
                             android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:focusableInTouchMode="true"
                             android:focusable="true">


                </TableLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="3"
            android:gravity="bottom">

            <Button
                android:id="@+id/bFour2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Four"/>


            <Button
                android:id="@+id/bHome2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"/>

            <Button
                android:id="@+id/bRedd2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Redd"/>
        </LinearLayout>


    </LinearLayout>






</RelativeLayout>
